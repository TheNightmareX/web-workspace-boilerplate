{
  "name": "webapp-workspace-boilerplate",
  "version": "0.0.0",
  "description": "",
  "author": {
    "name": "Char2s",
    "email": "Char2s@outlook.com"
  },
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "prepare": "husky install",
    "release": "standard-version --no-verify",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:client": "ng serve",
    "dev:server": "ts-node-dev -P projects/server/tsconfig.app.json --respawn projects/server/src/app.ts server:start",
    "dev:libs": "tsc -b tsconfig.libs.json -w",
    "build": "npm run build:libs && concurrently \"npm:build:client\" \"npm:build:server\"",
    "build:client": "ng build",
    "build:server": "tsc -p projects/server/tsconfig.app.json && tsc-alias -p projects/server/tsconfig.app.json",
    "build:libs": "tsc -b tsconfig.libs.json",
    "test:client": "ng test",
    "test:server": "npm run test:server:unit && npm run test:server:integration",
    "test:server:unit": "jest --config ./projects/server/jest.config.unit.js",
    "test:server:integration": "jest --config ./projects/server/jest.config.integration.js",
    "lint": "prettier --write \"{projects/**/*,*}.{html,css,less,scss,sass,js,json,md}\" && eslint \"projects/**/*.ts\" --cache --fix",
    "server:app": "ts-node -P projects/server/tsconfig.app.json projects/server/src/app.ts"
  },
  "dependencies": {
    "@angular/animations": "~13.3.2",
    "@angular/common": "~13.3.2",
    "@angular/compiler": "~13.3.2",
    "@angular/core": "~13.3.2",
    "@angular/forms": "~13.3.2",
    "@angular/platform-browser": "~13.3.2",
    "@angular/platform-browser-dynamic": "~13.3.2",
    "@angular/router": "~13.3.2",
    "@deepkit/app": "^1.0.1-alpha.71",
    "@deepkit/core": "^1.0.1-alpha.65",
    "@deepkit/event": "^1.0.1-alpha.71",
    "@deepkit/framework": "^1.0.1-alpha.71",
    "@deepkit/injector": "^1.0.1-alpha.71",
    "@deepkit/logger": "^1.0.1-alpha.65",
    "@deepkit/orm": "^1.0.1-alpha.71",
    "@deepkit/type": "^1.0.1-alpha.71",
    "@deepkit/type-compiler": "^1.0.1-alpha.71",
    "@deepkit/workflow": "^1.0.1-alpha.71",
    "rimraf": "^3.0.2",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.2",
    "@angular/cli": "~13.3.2",
    "@angular/compiler-cli": "~13.3.2",
    "@types/jasmine": "~3.10.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jasmine-core": "~3.10.0",
    "jest": "^28.1.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.5.1",
    "source-map-support": "^0.5.20",
    "standard-version": "^9.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^28.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.6.7",
    "tsconfig-paths": "^3.10.1",
    "typescript": "~4.5.2"
  },
  "workspaces": [
    "projects/*"
  ]
}
